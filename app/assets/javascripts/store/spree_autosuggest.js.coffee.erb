//= require store/autosuggest
//= require store/spree_core

$ ->
  suggestOn = '<%= Spree::Autosuggest::Config.field %>'

  $("input[name=#{suggestOn}]:not(.ui-autocomplete-input)").live "focus", ->
    new Autosuggest(this,
      to_display: <%= Spree::Autosuggest::Config.rows_to_display %>
      delay: 100
      strict_cache: <%= Spree::Autosuggest::Config[:search_backend].to_json %>
      minLength: 1)

